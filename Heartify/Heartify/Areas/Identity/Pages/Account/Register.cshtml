@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/styles-base.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/register-styles.css" asp-append-version="true" />

<main>
    <section>
        <article>
            <div class="main-container">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="my-container">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="register-text">
                            <h1>@ViewData["Title"]</h1>
                            <p>Please fill in this form to create an account.</p>
                        </div>

                        <hr class="inbetween-form">

                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <hr class="inbetween-form">

                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <hr class="inbetween-form">

                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <hr class="inbetween-form">

                        <p><span class="emergency-mark">!</span> By creating an account you agree to our <a asp-controller="Home" asp-action="Terms">Terms & Privacy</a></p>
                        
                        <button id="registerSubmit" type="submit" class="registerbtn">Register</button>
                    </div>

                    <div class="container signin">
                        <p>Already have an account? <a class="button-direct" asp-area="Identity" asp-page="/Account/Login">Login</a>.</p>
                    </div>
                </form>
            </div>
        </article>
    </section>
</main>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
