@model ProfileMatchesModel

@{
    ViewData["Title"] = "Matches";
}

<partial name="_PersonMenuPartial" />

@if (!Model.ProfilesArray.Any())
{
    <h3 text-center>You have no matches at the moment, but don't get discoureged, you will definetly get some matches soon!</h3>
}

<div class="row">
    @foreach (var profile in Model.ProfilesArray)
    {
        <div class="col-md-6">
            <div class="card mb-5 my-card">
            <div class="card-body text-center">
                    <h5>@profile.FirstName @profile.LastName, born on @profile.DateOfBirth is looking for a @profile.Relationship.</h5>
                    <h5>@profile.FirstName is a @profile.Gender and is looking for a @profile.WantedGender</h5>
                    <h6>"@profile.Description"</h6>
                    <h5>You can now reach @profile.FirstName at their email: @profile.Email</h5>

                    <form asp-area="" asp-controller="Dating" asp-action="RemoveMatch" asp-route-personProfileId="@profile.Id" class="mb-1" method="post">
                        <button type="submit" class="btn btn-success">Remove match</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>