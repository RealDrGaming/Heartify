@using Heartify.Core.Models.PersonProfile

@model PersonProfileFormModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/styles-base.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/find-yourself-styles.css" asp-append-version="true" />

<main>
    <section>
        <article>
            <form asp-action="EditPersonProfile" method="post">
                <div class="my-container">
                    <div class="creation-text">
                        <h1>@ViewBag.Title</h1>
                        <p>Please fill in this form to create your dating profile.</p>
                    </div>

                    <partial name="_PersonProfileFormPartial" />

                    <button type="submit" class="registerbtn">Save changes</button>
                </div>
            </form>
        </article>
    </section>
</main>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}