@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<link rel="stylesheet" href="~/css/styles-base.css" asp-append-version="true" />


@if (SignInManager.IsSignedIn(User))
{
    <div class="login-button">
        <div class="button-direct"><a class="button-direct" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a></div>
    </div>
    <div class="register-button">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="logout-button btn btn-outline-danger">Logout</button>
        </form>
    </div>
}
else
{
    <div class="login-button">
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path fill="currentColor" d="M217.9 105.9L340.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L217.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1L32 320c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM352 416l64 0c17.7 0 32-14.3 32-32l0-256c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32l64 0c53 0 96 43 96 96l0 256c0 53-43 96-96 96l-64 0c-17.7 0-32-14.3-32-32s14.3-32 32-32z" /></svg>
        <div class="button-direct"><a class="button-direct" asp-area="Identity" asp-page="/Account/Login">Login</a></div>
    </div>
    <div class="register-button">
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" width="1.2em" viewBox="0 0 512 512"><path fill="currentColor" d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17v80c0 13.3 10.7 24 24 24h80c13.3 0 24-10.7 24-24V448h40c13.3 0 24-10.7 24-24V384h40c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" /></svg>
        <div class="button-direct"><a class="button-direct" asp-area="Identity" asp-page="/Account/Register">Register</a></div>
    </div>
}